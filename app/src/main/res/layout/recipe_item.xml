<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="4dp"
    android:elevation="8dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recipe_IMG_Image"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@id/recipe_LBL_duration"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/recipe_LBL_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_toStartOf="@id/recipe_IMG_favorite"
            android:layout_toEndOf="@id/recipe_IMG_Image"
            android:maxLines="2"
            android:minLines="2"
            android:text="RECIPE_NAME"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/recipe_LBL_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipe_LBL_title"
            android:layout_alignStart="@id/recipe_LBL_title"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:minLines="1"
            android:text="hard"
            android:textSize="16sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/recipe_LBL_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipe_LBL_difficulty"
            android:layout_alignStart="@id/recipe_LBL_title"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:minLines="1"
            android:text="00h 00m"
            android:textSize="16sp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recipe_IMG_favorite"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="6dp"
            android:src="@drawable/heart_empty" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>